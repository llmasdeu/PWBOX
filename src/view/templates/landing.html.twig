{% extends "base.html.twig" %}
{% block title %}Landing{% endblock %}
{% block content %}
  <h1 class="text-center alert alert-primary">PWBox - Online Storage</h1>
  <div class="row m-4 text-center">
    <form id="form_registration" class="col" action="/registeruser" enctype="application/x-www-form-urlencoded" method="POST">
      <h2 class="mb-4">Register</h2>
      {% if action == "register_user" and statusMessage == "success" %}
      <p class="status success">You have been successfully registered!</p>
      {% elseif action == "register_user" and statusMessage == "error" %}
      <p class="status error">Error! The registration couldn't be processed.</p>
      {% endif %}
      <div class="form-group"><input id="username" type="text" name="username" class="form-control-sm" placeholder="UserName" onkeyup="comprovaInput('register')"></div>
      <div class="form-group"><span id="error1" style="color: red"></span></div>
      <div class="form-group"><input id="email" type="email" name="email" class="form-control-sm" placeholder="Email" onkeyup="comprovaInput('register')"></div>
      <div class="form-group"><span id="error2" style="color: red"></span></div>
      <div class="form-group"><input id="birthday" type="date" name="birthday" class="form-control-sm" placeholder="01/05/1990" onkeyup="comprovaInput('register')"></div>
      <div class="form-group"><span id="error3" style="color: red"></span></div>
      <div class="form-group"><input id="password" type="password" name="password"  class="form-control-sm" placeholder="Password" onkeyup="comprovaInput('register')"></div>
      <div class="form-group"><span id="error4" style="color: red"></span></div>
      <div class="form-group"><input id="confirmPassword" type="password" name="confirmPassword" class="form-control-sm" placeholder="Confirm Password" onkeyup="comprovaInput('register')"></div>
      <div class="form-group"><span id="error5" style="color: red"></span></div>
      <div><button type="submit" name="button" class="btn-dark" onclick="sendForm(this)">Register</button></div>
    </form>
    <form id="form_login" class="col" action="/loginuser" enctype="application/x-www-form-urlencoded" method="POST">
      <h2 class="mb-4">Login</h2>
      {% if action == "login_user" and statusMessage == "error" %}
      <p class="status error">Error! A user with this credentials doesn't exist.</p>
      {% endif %}
      <div class="form-group"><input id="emailLogin" type="email" name="email" class="form-control-sm" placeholder="Email" onkeyup="comprovaInput('login')"></div>
      <div class="form-group"><span id="error6" style="color: red"></span></div>
      <div class="form-group"><input id="passwordLogin" type="password" name="password" class="form-control-sm" placeholder="Password" onkeyup="comprovaInput('login')"></div>
      <div class="form-group"><span id="error7" style="color: red"></span></div>
      <div class="form-group"><button class="btn-dark">Send</button></div>
    </form>
  </div>
{% endblock %}
{% block scripts %}
    <script src="{{ base_url }}../assets/js/landingPage.js"></script>
{% endblock %}
